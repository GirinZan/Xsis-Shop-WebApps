@model XSIS.Shop.ViewModel.SupplierViewModel

@{
    ViewBag.Title = "Details";
}

<div class="block-header">
    <h2>Form Supplier</h2>
</div>

<div class="card">
    <div class="card-header">
        <h2>
            Detail Supplier
            <small>
                Form di bawah ini digunakan untuk melihat Detail Supplier.
            </small>
        </h2>
    </div>
    <div class="card-body card-padding">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.CompanyName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CompanyName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ContactName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ContactName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ContactTitle)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ContactTitle)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Country)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Country)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Fax)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Fax)
            </dd>
        </dl>
    </div>
</div>
<br />
<div class="card">
    <div class="card-header">
        <h4>List of Products <br />
        <small>
            Daftar produk-produk yang dipunyai oleh supplier.
        </small>
        </h4>
    </div>
    <div class="card-body card-padding">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.Label("ProductName", "Product Name")
                    </th>
                    <th>
                        @Html.Label("UnitPrice", "Unit Price")
                    </th>
                    <th>
                        @Html.Label("Package", "Package")
                    </th>
                    <th>
                        @Html.Label("IsDiscontinued", "Is Discontinued")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Produk)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Package)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDiscontinued)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="@Url.Action("Index","Suppliers")" class="btn btn-info btn-sm m-t-10">Back to Index</a>
        <a href="@Url.Action("Edit","Suppliers", new { id = Model.Id })" class="btn btn-primary btn-sm m-t-10"><i class="zmdi zmdi-edit"></i> Edit</a>
    </div>
</div>
